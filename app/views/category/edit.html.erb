<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(<%= asset_path 'breadcumb3.jpg' %>);">
    <div class="bradcumbContent">
        <p>Modifier la catégorie</p>
        <h2><%=@category.name%></h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Contact Area Start ##### -->
<section class="contact-form-area section-padding-100-0">
    <div class="container">
        <div class="row">
        <%= form_for @category, method: "patch" do |f| %>        
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">      
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-book"></span>
                        </div>
                        <%= f.text_field :name, class:"form-control", id:"name", cols:"30", placeholder:"Nom de la catégorie"%>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">  
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="col-12 text-center">
                            <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                                Sauvegarder <i class="fa fa-angle-double-right"></i>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>        
    </div>
</section>
<!-- ##### Contact Area End ##### -->