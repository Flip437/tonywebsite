<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(<%= asset_path 'writing.jpg' %>);">
    <div class="bradcumbContent">
        <p style="color: black">Modifier la galerie</p>
        <h2 style="color: black"><%=@gallery.name%></h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Contact Area Start ##### -->
<section class="contact-form-area section-padding-100-0">
    <div class="container">
        <%= form_for @gallery, method: "patch" do |f| %>
        <div class="row">        
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-book"></span>
                        </div>
                        <%= f.text_field :name, class:"form-control", id:"name", cols:"30", placeholder:"Titre"%>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-photo-camera"></span>
                        </div>
                        <%= f.drag_and_drop_file_field :pictures, "Déposer vos photos ici", size_limit: 10_000_000 %>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">  
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="col-12 text-center">
                            <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                                Sauvegarder <i class="fa fa-angle-double-right"></i>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% end %>

        <div class="row">        
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-photo-camera"></span>
                        </div>
                        <div class="row">
                            <% @pictures.each do |pic| %>
                                <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                                    <%= image_tag(pic, class: 'zoom img-fluid') %>
                                    <%= link_to 'Supprimer', gallery_picture_path(@gallery, pic), method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cette photo?' } %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">        
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-video-camera"></span>
                        </div>
                        <div class="row">
                            <% @videos.each do |vid| %>
                                <div class="thumb">                               
                                    <div class="single-album-area wow fadeInUp" data-wow-delay="100ms">
                                        <div class="album-thumb">
                                            <%= image_tag('youtube.jpg', class: 'zoom img-fluid') %>
                                            <!-- Play Icon -->
                                            <div class="play-icon">
                                                <%= content_tag(:a, content_tag(:span,"", class: "icon-play-button"), :href => "#{vid.url}", class: "video--play--btn") %>
                                            </div>
                                        </div>
                                    </div>
                                    <p> <%= vid.name %> </p> <br>
                                    <%= link_to 'Supprimer', gallery_video_path(@gallery, vid), method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cette vidéo?' } %>
                                </div>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">        
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-trash"></span>
                        </div>
                        <%= link_to 'Supprimer la galerie', @gallery, method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cette galerie?' } %>
                    </div>
                </div>
            </div>
        </div>

    </div>
</section>
<!-- ##### Contact Area End ##### -->