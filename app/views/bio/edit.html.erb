<style>
	trix-editor {
		height: 500px !important;
		max-height: 500px !important;
	  	overflow-y: auto !important;
	}
</style>

<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(<%= asset_path 'breadcumb3.jpg' %>);">
    <div class="bradcumbContent">
        <p>Modifier</p>
        <h2>Biographie</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Contact Area Start ##### -->
<section class="contact-form-area section-padding-100-0">
<div class="container">
<%= form_for @bio, method: "patch" do |f| %>
    <div class="row">      
        <div class="col-12 col-lg-12">
            <div class="contact-content mb-100">
                <!-- Single Contact Info -->
                <div class="single-contact-info d-flex align-items-center">
                    <div class="icon mr-30">
                        <span class="icon-user-1"></span>
                    </div>                                                        
                    <%= f.text_field :title, class:"form-control", id:"name", placeholder:"Titre de ma biographie"%>
                </div>

                <!-- Single Contact Info -->
                <div class="single-contact-info d-flex align-items-center">
                    <div class="icon mr-30">
                        <span class="icon-edit"></span>
                    </div>
                    <%= f.label 'Descripion' %>
                </div>

                <div class="justify-content-start">                                          
                    <%= f.trix_editor :content, id:"name", placeholder:"Contenu de ma biographie" %>
                </div>
            </div>
        </div>
    </div>

    <div class="row">  
        <div class="col-12 col-lg-12">
            <div class="contact-content mb-100">
                <!-- Single Contact Info -->
                <div class="single-contact-info d-flex align-items-center">
                    <div class="col-12 text-center">
                        <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                            Sauvegarder <i class="fa fa-angle-double-right"></i>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% end %>
</div>
</section>
<!-- ##### Contact Area End ##### -->