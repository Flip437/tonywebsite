<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(<%= asset_path 'writing.jpg' %>);">
    <div class="bradcumbContent">
        <p>En savoir plus sur moi</p>
        <h2>Biographie</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Contact Area Start ##### -->
<section class="contact-area section-padding-100-0">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-3">
                <div class="contact-content mb-100">
                    <!-- Title -->
                    <div class="contact-title mb-50">
                        <h5> <%= @bio.title%> </h5>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-edit  "></span>
                        </div>                                                        
                        <%=raw @bio.content %>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class=" icon-eraser"></span>
                        </div>
                        <p> <%= link_to 'Supprimer cette biographie', @bio, method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cette biographie?' } %> 
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class=" icon-settings-2"></span>
                        </div>
                        <p> <%= link_to "Modifier cette biographie", edit_bio_path(@bio) %> </p>
                    </div>

                    <!-- Contact Social Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class=" icon-share"></span>
                        </div>
                        <%= social_share_button_tag("Partager cet évènement !", :url => "https://anthonysiteweb.herokuapp.com/gig/#{@bio.id}") %>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">

                </div>
            </div>
        </div>

    </div>
</section>
<!-- ##### Contact Area End ##### -->