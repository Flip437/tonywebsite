    <div class="bradcumbContent">
        <p>En savoir plus sur moi</p>
        <h2>Biographie</h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Contact Area Start ##### -->
<section class="contact-area section-padding-100-0">
    <div class="container">
        <div class="row">

            <div class="col-12 col-lg-3">
                <div class="contact-content mb-100">
                    <!-- Title -->
                    <div class="contact-title mb-50">
                        <h5> <%=@gig.title%> </h5>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-placeholder"></span>
                        </div>
                        <p> <%=@gig.adress%> </p>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-shopping-cart"></span>
                        </div>
                        <p> <%= link_to "Billets", "#{@gig.ticketurl}", :target => "_blank" %> </p>
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class=" icon-eraser"></span>
                        </div>
                        <p> <%= link_to 'Supprimer cette date',  @gig,  method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cet évènement ?' } %> 
                    </div>

                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class=" icon-settings-2"></span>
                        </div>
                        <p> <%= link_to "Modifier cette date", edit_gig_path(@gig) %> </p>
                    </div>

                    <!-- Contact Social Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class=" icon-share"></span>
                        </div>
                        <%= social_share_button_tag("Partager cet évènement !", :url => "https://anthonysiteweb.herokuapp.com/gig/#{@gig.id}") %>
                    </div>

                </div>
            </div>

            <div class="col-12 col-lg-9">
                <!-- ##### Google Maps ##### -->
                <div class="map-area mb-100">
                    <% if @gig.mapurl == '' %>
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2721.2761970416577!2d3.166399050956415!3d46.99554953787891!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f04f420b24e6db%3A0x3414e9c637ba3bfa!2sCaf%C3%A9%20Charbon!5e0!3m2!1sfr!2sfr!4v1586002319868!5m2!1sfr!2sfr" width="600" height="450" frameborder="0" style="border:0;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>
                    <% else %>
                        <%=raw @gig.mapurl %>
                    <% end %>
                </div>
            </div>

        </div>

        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="icon mr-30">
                            <span class="icon-edit  "></span>
                        </div>                                                        
                        <%= @gig.description %>
                    </div>
                </div>
            </div>
        </div>




    </div>
</section>
<!-- ##### Contact Area End ##### -->