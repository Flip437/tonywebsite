<!-- ##### Breadcumb Area Start ##### -->
<section class="breadcumb-area bg-img bg-overlay" style="background-image: url(<%= asset_path 'breadcumb3.jpg' %>);">
    <div class="bradcumbContent">
        <p>Modifier l oeuvre</p>
        <h2><%=@repertoire.title%></h2>
    </div>
</section>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Contact Area Start ##### -->
<section class="contact-form-area section-padding-100-0">
    <div class="container">
        <div class="row">  
        
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <%= form_for @repertoire, method: "patch" do |f| %>
                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex align-items-center">
                            <div class="icon mr-30">
                                <span class="icon-book"></span>
                            </div>
                            <%= f.text_field :title, class:"form-control", id:"name", cols:"30", placeholder:"Titre"%>
                        </div>

                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex align-items-center">
                            <div class="icon mr-30">
                                <span class="icon-paint-brush"></span>
                            </div>                                                        
                            <%= f.text_field :composer, class:"form-control", id:"name", placeholder:"Compositeur"%>
                        </div>

                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex align-items-center">
                            <div class="icon mr-30">
                                <span class="icon-microphone"></span>
                            </div>                                                        
                            <%= f.text_field :role, class:"form-control", id:"name", placeholder:"Rôle"%>
                        </div>

                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex align-items-center">
                            <div class="icon mr-30">
                                <span class="icon-favorites"></span>
                            </div>                                                        
                            <%= select("repertoire", "category_id", Category.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, {class: "form-control"}) %>
                        </div>

                        <!-- Single Contact Info -->
                        <div class="single-contact-info d-flex align-items-center">
                            <div class="icon mr-30">
                                <span class="icon-favorites"></span>
                            </div>                                                        
                            <%= f.text_field :newcategory, class:"form-control", id:"name", placeholder:"Nouvelle catégorie d'oeuvre" %>
                        </div>

                </div>
            </div>

        </div>

        <div class="row">  
            <div class="col-12 col-lg-12">
                <div class="contact-content mb-100">
                    <!-- Single Contact Info -->
                    <div class="single-contact-info d-flex align-items-center">
                        <div class="col-12 text-center">
                            <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                                Sauvegarder <i class="fa fa-angle-double-right"></i>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <% end %>
        
    </div>
</section>
<!-- ##### Contact Area End ##### -->