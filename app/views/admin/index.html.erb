<!-- ##### Elements Area Start ##### -->
<section class="elements-area mt-30 section-padding-100-0">
    <div class="container">
        <!-- ##### Tabs ##### -->
        <div class="row">
            <div class="col-12 col-lg-12">
                <div class="oneMusic-tabs-content">

                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link" id="tab--1" data-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="false">Evènements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" id="tab--2" data-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Articles</a>
                        </li>
                    </ul>

                    <div class="tab-content mb-100" id="myTabContent">
                        <div class="tab-pane fade" id="tab1" role="tabpanel" aria-labelledby="tab--1">
                            <div class="oneMusic-tab-content">
                                <div class="accordions mb-100" id="accordion" role="tablist" aria-multiselectable="true">
                                    <!-- single accordian area -->
                                    <div class="panel single-accordion">
                                        <h6><a role="button" class="" aria-expanded="true" aria-controls="collapseOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Ajouter un évènement
                                                <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                                <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                            </a>
                                        </h6>
                                        <div id="collapseOne" class="accordion-content collapse show">
                                            <%= render 'admin/newform' %>
                                        </div>
                                    </div>
                                    <!-- single accordian area -->
                                    <div class="panel single-accordion">

                                        <h6>
                                            <a role="button" class="collapsed" aria-expanded="true" aria-controls="collapseTwo" data-parent="#accordion" data-toggle="collapse" href="#collapseTwo">Liste de mes évènements
                                                    <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                                    <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                                    </a>
                                        </h6>

                                        <div id="collapseTwo" class="accordion-content collapse">
                                            <div class="col-12">
                                                <!-- Single Web Icon -->
                                                <table class="table table-striped table-dark mb-30 mt-30">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">id</th>
                                                            <th scope="col">Titre</th>
                                                            <th scope="col">Date</th>
                                                            <th scope="col">Heure</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    <% @gigs.each do |gig| %>
                                                        <tr>
                                                            <th scope="row"> <%= gig.id %> </th>
                                                            <td> <%= link_to gig.title, gig_path(gig), class:"post-title" %> </td>
                                                            <td> <%= gig.date %> </td>
                                                            <td> <%= gig.time %> </td>
                                                            <td> <%= link_to 'Supprimer',  gig,  method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cet évènement?' } %> </td>
                                                        </tr>
                                                        <% end %>
                                                    </tbody>
                                                </table>
                                            </div>                                    
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab--2">
                            <div class="oneMusic-tab-content">
                                <div class="accordions mb-100" id="accordion" role="tablist" aria-multiselectable="true">
                                    <!-- single accordian area -->
                                    <div class="panel single-accordion">
                                        <h6><a role="button" class="" aria-expanded="true" aria-controls="collapseOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Ajouter un article
                                                <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                                <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                            </a>
                                        </h6>
                                        <div id="collapseOne" class="accordion-content collapse show">
                                            <%= render 'admin/newform' %>
                                        </div>
                                    </div>
                                    <!-- single accordian area -->
                                    <div class="panel single-accordion">

                                        <h6>
                                            <a role="button" class="collapsed" aria-expanded="true" aria-controls="collapseTwo" data-parent="#accordion" data-toggle="collapse" href="#collapseTwo">Liste de mes articles
                                                    <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
                                                    <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
                                                    </a>
                                        </h6>

                                        <div id="collapseTwo" class="accordion-content collapse">
                                            <div class="col-12">
                                                <!-- Single Web Icon -->
                                                <table class="table table-striped table-dark mb-30 mt-30">
                                                    <thead>
                                                        <tr>
                                                            <th scope="col">id</th>
                                                            <th scope="col">Titre</th>
                                                            <th scope="col">Date</th>
                                                            <th scope="col">Heure</th>
                                                            <th scope="col">Action</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    <% @gigs.each do |gig| %>
                                                        <tr>
                                                            <th scope="row"> <%= gig.id %> </th>
                                                            <td> <%= link_to gig.title, gig_path(gig), class:"post-title" %> </td>
                                                            <td> <%= gig.date %> </td>
                                                            <td> <%= gig.time %> </td>
                                                            <td> <%= link_to 'Supprimer',  gig,  method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cet évènement?' } %> </td>
                                                        </tr>
                                                        <% end %>
                                                    </tbody>
                                                </table>
                                            </div>                                    
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>                      
                    </div>

                </div>
            </div>
        </div>
    </div>
</section>
<!-- ***** Elements Area End ***** -->