<div class="panel single-accordion">
    <h6><a role="button" class="" aria-expanded="true" aria-controls="collapseOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Cr√©er ma biographie
            <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
            <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
        </a>
    </h6>
    <div id="collapseOne" class="accordion-content collapse show">
        <!-- ##### Contact Area Start ##### -->
        <section class="contact-form-area section-padding-100-0">
            <div class="container">
            <%= form_for @gig, url: gig_index_path, method: "post" do |f| %>
                <div class="row">      
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">
                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-user-1"></span>
                                </div>                                                        
                                <%= f.text_field :title, class:"form-control", id:"name", placeholder:"Titre de ma biographie"%>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-edit"></span>
                                </div>
                                <%= f.label 'Descripion' %>
                            </div>

                            <div class="justify-content-start">                                          
                                <%= f.trix_editor :description, class:"form-control", id:"name", placeholder:"Contenu de ma biographie"%>
                            </div>
                        </div>
                    </div>
                </div>
        
                <div class="row">  
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">
                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="col-12 text-center">
                                    <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                                        Sauvegarder <i class="fa fa-angle-double-right"></i>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
            </div>
        </section>
        <!-- ##### Contact Area End ##### -->
    </div>
</div>