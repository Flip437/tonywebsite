<div class="panel single-accordion">
    <h6><a role="button" class="" aria-expanded="true" aria-controls="collapseOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Ajouter une galerie de photos
            <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
            <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
        </a>
    </h6>
    <div id="collapseOne" class="accordion-content collapse show">
        <!-- ##### Contact Area Start ##### -->
        <section class="contact-form-area section-padding-100-0">
            <div class="container">
            <%= form_for @newvideo, url: videos_path, local: true do |f| %>
                <div class="row">            
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">    

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-photo-camera"></span>
                                </div>    
                                <%= f.text_field :name, class:'form-control', placeholder: 'Saisissez le nom de votre nouvelle galerie de photos', require: true%>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-favorites"></span>
                                </div>                                                        
                                <%= select("name", "gallery_id", Gallery.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, {class: "form-control"}) %>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-video-camera"></span>
                                </div>    
                                <%= f.text_field :url, class:'form-control', placeholder: 'Saisissez les url des vidÃ©os que vous souhaitez ajouter' %>
                            </div>

                        </div>
                    </div>
                </div>

                <div class="row">  
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">
                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="col-12 text-center">
                                    <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                                        Sauvegarder <i class="fa fa-angle-double-right"></i>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <% end %>
            </div>
        </section>
        <!-- ##### Contact Area End ##### -->
    </div>
</div>