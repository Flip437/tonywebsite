<div class="panel single-accordion">
<h6>
    <a role="button" class="collapsed" aria-expanded="true" aria-controls="collapseTwo" data-parent="#accordion" data-toggle="collapse" href="#collapseTwo">Mon répèrtoire
            <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
            <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
            </a>
</h6>
<div id="collapseTwo" class="accordion-content collapse">
    <div class="col-12">
        <!-- Single Web Icon -->
        <table class="table table-striped table-dark mb-30 mt-30">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Compositeur</th>
                    <th scope="col">Rôle</th>
                    <th scope="col">Catégorie</th>
                    <th scope="col">Afficher</th>
                    <th scope="col">Edition</th>
                    <th scope="col">Supression</th>
                </tr>
            </thead>
            <tbody>
            <% @repertoires.each do |rep| %>
                <tr>
                    <th scope="row"> <%= rep.id %> </th>
                    <td> <%= link_to rep.title, repertoire_path(rep), class:"post-title" %> </td>
                    <td> <%= rep.composer %> </td>
                    <td> <%= rep.role %> </td>
                    <td> <%= rep.category.name %> </td>
                    <td> <%= link_to 'Afficher', repertoire_path(rep) %> </td>
                    <td> <%= link_to 'Editer', edit_repertoire_path(rep) %> </td>
                    <td> <%= link_to 'Supprimer', rep, method: :delete, remote: true %> </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>                                    
</div>
</div>