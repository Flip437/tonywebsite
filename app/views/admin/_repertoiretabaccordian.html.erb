<div class="panel single-accordion">
<h6>
    <a role="button" class="collapsed" aria-expanded="true" aria-controls="collapseTwo" data-parent="#accordion" data-toggle="collapse" href="#collapseTwo">Liste de mes évènements
            <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
            <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
            </a>
</h6>
<div id="collapseTwo" class="accordion-content collapse">
    <div class="col-12">
        <!-- Single Web Icon -->
        <table class="table table-striped table-dark mb-30 mt-30">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">Titre</th>
                    <th scope="col">Compositeur</th>
                    <th scope="col">Rôle</th>
                    <th scope="col">Catégorie</th>
                </tr>
            </thead>
            <tbody>
            <% @repertoires.each do |rep| %>
                <tr>
                    <th scope="row"> <%= rep.id %> </th>
                    <td> <%= link_to rep.title, repertoire_path(rep), class:"post-title" %> </td>
                    <td> <%= rep.composer %> </td>
                    <td> <%= rep.role %> </td>
                    <td> <%= link_to 'Supprimer',  rep,  method: :delete, data: { confirm: 'Etes vous sur de vouloir supprimer cette oeuvre?' } %> </td>
                </tr>
                <% end %>
            </tbody>
        </table>
    </div>                                    
</div>
</div>