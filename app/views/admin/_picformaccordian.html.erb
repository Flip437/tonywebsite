<div class="panel single-accordion">
    <h6><a role="button" class="" aria-expanded="true" aria-controls="collapseOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Ajouter une gallerie de photos
            <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
            <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
        </a>
    </h6>
    <div id="collapseOne" class="accordion-content collapse show">
        <!-- ##### Contact Area Start ##### -->
        <section class="contact-form-area section-padding-100-0">
            <div class="container">
            <%= simple_form_for @newgallery, url: gallery_index_path do |f| %>
                <div class="row">            
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">    

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-book"></span>
                                </div>    
                                <%= f.text_field :name, class:'form-control', placeholder: 'Saisissez le nom de votre nouvelle gallerie de photos', required: true %>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-photo-camera"></span>
                                </div>
                                <%= f.drag_and_drop_file_field :pictures, nil, size_limit: 10_000_000 %>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-video-camera"></span>
                                </div>
                                <div class="videos">
                                    <%= f.simple_fields_for :videos do |builder| %>
                                        <%= render 'video_fields', f: builder %>
                                    <% end %>
                                    <%= link_to_add_association 'Ajouter des vidÃ©os', f, :videos, :partial => 'staticpage/video_fields', class: 'btn oneMusic-btn', data: { association_insertion_node: '.videos', association_insertion_method: :append } %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">  
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">
                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="col-12 text-center">
                                    <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                                        Sauvegarder <i class="fa fa-angle-double-right"></i>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            <% end %>
            </div>
        </section>
        <!-- ##### Contact Area End ##### -->
    </div>
</div>