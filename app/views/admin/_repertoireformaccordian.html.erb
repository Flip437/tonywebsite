<div class="panel single-accordion">
    <h6><a role="button" class="" aria-expanded="true" aria-controls="collapseOne" data-toggle="collapse" data-parent="#accordion" href="#collapseOne">Ajouter une oeuvre
            <span class="accor-open"><i class="fa fa-plus" aria-hidden="true"></i></span>
            <span class="accor-close"><i class="fa fa-minus" aria-hidden="true"></i></span>
        </a>
    </h6>
    <div id="collapseOne" class="accordion-content collapse show">
        <!-- ##### Contact Area Start ##### -->
        <section class="contact-form-area section-padding-100-0">
            <div class="container">
            <%= form_for @repertoire, url: repertoire_index_path, method: "post" do |f| %>
                <div class="row">            
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-book"></span>
                                </div>
                                <%= f.text_field :title, class:"form-control", id:"name", placeholder:"Titre" %>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-paint-brush"></span>
                                </div>                                                        
                                <%= f.text_field :composer, class:"form-control", id:"name", placeholder:"Compositeur" %>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-microphone"></span>
                                </div>                                                        
                                <%= f.text_field :role, class:"form-control", id:"name", placeholder:"Role interprété" %>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-favorites"></span>
                                </div>                                                        
                                <%= select("repertoire", "category_id", Category.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }, {class: "form-control"}) %>
                            </div>

                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="icon mr-30">
                                    <span class="icon-favorites"></span>
                                </div>                                                        
                                <%= f.text_field :newcategory, class:"form-control", id:"name", placeholder:"Nouvelle catégorie d'oeuvre" %>
                            </div>

                        </div>
                    </div>
                </div>
        
                <div class="row">  
                    <div class="col-12 col-lg-12">
                        <div class="contact-content mb-100">
                            <!-- Single Contact Info -->
                            <div class="single-contact-info d-flex align-items-center">
                                <div class="col-12 text-center">
                                    <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                                        Sauvegarder <i class="fa fa-angle-double-right"></i>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            <% end %>
            </div>
        </section>
        <!-- ##### Contact Area End ##### -->
    </div>
</div>