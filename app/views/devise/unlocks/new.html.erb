<!-- ##### Breadcumb Area Start ##### -->
<%= render 'devise/breadcumb' %>
<!-- ##### Breadcumb Area End ##### -->


<!-- ##### Login Area Start ##### -->
<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">
                    <h3>Envoyer les instructions de d√©blocage</h3>
                    <!-- ##### Alert Area Start ###### -->
                    <%= devise_error_messages! %>
                    <!-- ##### Alert Area End ##### -->
                    <!-- Login Form -->
                    <div class="login-form">
                      <%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                            
                        <div class="form-group">
                          <%= f.label :email %><br />
                          <%= f.email_field :email, class:"form-control", placeholder:"Entrer votre adresse mail", autocomplete:"email" ,autofocus: true %>
                        </div>

                        <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                          Envoyer <i class="fa fa-angle-double-right"></i>
                        <% end %>

                      <% end %>
                    <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Login Area End ##### -->