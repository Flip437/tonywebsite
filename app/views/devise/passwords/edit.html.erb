<!-- ##### Breadcumb Area Start ##### -->
<%= render 'devise/breadcumb' %>
<!-- ##### Breadcumb Area End ##### -->


<!-- ##### Login Area Start ##### -->
<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">
                    <h3>Mot de passe oubliÃ© ?</h3>
                    <!-- ##### Alert Area Start ##### -->
                    <%= devise_error_messages! %>
                    <!-- ##### Alert Area End ##### -->
                    <!-- Login Form -->
                    <div class="login-form">
                      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
                        <%= render "devise/shared/error_messages", resource: resource %>
                        <%= f.hidden_field :reset_password_token %>

                        <div class="form-group">
                          <%= f.label :password, "Nouveau mot de passe" %><br />
                            <% if @minimum_password_length %>
                              <em>(<%= @minimum_password_length %> characters minimum)</em><br />
                            <% end %>
                            <%= f.password_field :password, autofocus: true, autocomplete: "nouveau mot de passe", class:"form-control" %>
                        </div>

                        <div class="form-group">
                          <%= f.label :password_confirmation, "Confirmer le nouveau mot de passe" %><br />
                          <%= f.password_field :password_confirmation, autocomplete: "nouveau mot de passe", class:"form-control" %>
                        </div>

                        <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                          Changer mon mot de passe <i class="fa fa-angle-double-right"></i>
                        <% end %>
                      <% end %>
                    <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Login Area End ##### -->

