<!-- ##### Breadcumb Area Start ##### -->
<%= render 'devise/breadcumb' %>
<!-- ##### Breadcumb Area End ##### -->

<!-- ##### Login Area Start ##### -->
<section class="login-area section-padding-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-lg-8">
                <div class="login-content">
                    <h3>Inscrivez vous</h3>
                    <!-- ##### Alert Area Start ##### -->
                    <%= devise_error_messages! %>
                    <%= render 'layouts/messages' %>
                    <!-- ##### Alert Area End ##### -->
                    <!-- Login Form -->
                    <div class="login-form">
                    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                        <div class="form-group">
                          <%= f.label :email %><br />
                          <%= f.email_field :email, class:"form-control", placeholder:"Entrer votre adresse mail", autocomplete:"email" ,autofocus: true %>
                          <small id="emailHelp" class="form-text text-muted"><i class="fa fa-lock mr-2"></i>Toutes vos donn√©es de connexion resterons confidentielles</small>
                        </div>
                        <div class="form-group">
                          <%= f.label :password %><br />
                          <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                          <% end %><br />
                          <%= f.password_field :password, class:"form-control", autocomplete: "new-password", id:"exampleInputPassword1", placeholder:"Entrer votre mot de passe" %>
                        </div>
                        <div class="form-group">
                          <%= f.label :password_confirmation %><br />
                          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirmer votre mot de passe" %>
                        </div>
                        <% if devise_mapping.rememberable? %>
                          <div class="field">
                            <%= f.check_box :remember_me %>
                            <%= f.label :remember_me %>
                          </div>
                        <% end %>
                        <%= button_tag( :class => "btn oneMusic-btn mt-30") do %>
                          Se connecter <i class="fa fa-angle-double-right"></i>
                        <% end %>
                      <% end %>
                    <%= render "devise/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- ##### Login Area End ##### -->